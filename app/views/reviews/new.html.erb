<h1 class="text-center">Post review for <%= @instrument.name %></h1>h1>
<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-6 col-sm-offset-3">
      <%= simple_form_for [@instrument, @review] do |f| %>
        <%= f.input :content, placeholder: "Beautiful musical instrument" %>
        <%= f.submit "Post review", class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>
